type Token {
    id: ID! @id
    user: User! @relation(
        name: "TokenOfUser"
        link: INLINE
    )
}

type User {
    id: ID! @id
    username: String! @unique
    passwordHash: String!
    introduction: String!
    isAdmin: Boolean!
    participants: [Participant!]! @relation(name: "ParticipantOfUser")
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    lastSubmitAt: DateTime!
}
